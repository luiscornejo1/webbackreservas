# Configuración para producción

# Puerto del servidor
server.port=8080

# Configuración de la base de datos (ajusta los valores a tu entorno de producción)
spring.datasource.url=jdbc:postgresql://<PROD_HOST>:5432/<PROD_DB>
spring.datasource.username=<PROD_USER>
spring.datasource.password=<PROD_PASSWORD>
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA/Hibernate
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# CORS (ajusta el origen a tu dominio frontend en producción)
# Ejemplo: http://midominio.com
#spring.web.cors.allowed-origins=http://midominio.com

# Seguridad y logs
logging.level.org.springframework=INFO
logging.level.com.zonificacion.backend=INFO

# Otras configuraciones recomendadas para producción
spring.profiles.active=prod
management.endpoints.web.exposure.include=health,info

# Si usas JWT o alguna clave secreta, configúrala aquí
#app.jwt.secret=TU_SECRETO_PROD
